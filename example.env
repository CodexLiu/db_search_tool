# Rename this file to .env and fill in your API keys and tokens

# OpenAI API Key
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"

# Dropbox Access Token (Generated from your Dropbox App console)
# Required Scopes: account_info.read, files.content.read, sharing.read
DROPBOX_ACCESS_TOKEN="YOUR_DROPBOX_ACCESS_TOKEN"

# Slack Bot Token (starts with xoxb-)
# Required Scopes: app_mentions:read, chat:write, im:history, im:read, im:write
SLACK_BOT_TOKEN="YOUR_SLACK_BOT_TOKEN"

# Slack App Token for Socket Mode (starts with xapp-)
# Required Scope: connections:write
SLACK_APP_TOKEN="YOUR_SLACK_APP_TOKEN" 